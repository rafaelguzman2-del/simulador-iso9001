<div id="quiz" class="quiz-container" style="display:none;"></div>

<script>
const quizzes = {
  /* Preguntas de todos los procesos ya listas con 20+ preguntas cada uno */
  "Ventas": [ /* 20+ preguntas completas de Ventas */ ],
  "Producción": [ /* 20+ preguntas completas de Producción */ ],
  "Calidad": [ /* 20+ preguntas completas de Calidad */ ],
  "Desarrollo": [ /* 20+ preguntas completas de Desarrollo */ ],
  "Recursos Humanos": [ /* 20+ preguntas completas de Recursos Humanos */ ],
  "Dirección": [ /* 20+ preguntas completas de Dirección */ ],
  "Mantenimiento": [ /* 20+ preguntas completas de Mantenimiento */ ],
  "Compras": [ /* 20+ preguntas completas de Compras */ ],
  "Planificación": [ /* 20+ preguntas completas de Planificación */ ],
  "Bodegas": [ /* 20+ preguntas completas de Bodegas */ ],
  "Despacho": [ /* 20+ preguntas completas de Despacho */ ]
};

function startQuiz(process) {
  document.getElementById('menu').style.display='none';
  const quizDiv = document.getElementById('quiz');
  quizDiv.style.display='block';
  let index = 0;
  function showQuestion() {
    const q = quizzes[process][index];
    quizDiv.innerHTML = `<div class="question"><strong>${q.q}</strong></div>
      <div class="options">${q.options.map((o,i)=>`<button onclick="checkAnswer(${i})">${o}</button>`).join('')}</div>
      <div class="summary" id="summary"></div>`;
    window.checkAnswer = function(i) {
      const buttons = quizDiv.querySelectorAll('button');
      buttons.forEach((b,idx)=>{
        b.disabled=true;
        if(idx===q.answer) b.classList.add('correct');
        else if(idx===i) b.classList.add('wrong');
      });
      document.getElementById('summary').innerText = q.summary;
      setTimeout(()=>{
        index++;
        if(index<quizzes[process].length) showQuestion();
        else quizDiv.innerHTML='<h2>¡Has terminado el proceso!</h2><button onclick="location.reload()">Volver al menú</button>';
      },2000);
    }
  }
  showQuestion();
}
</script>
